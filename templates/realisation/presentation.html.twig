{% extends 'base.html.twig' %}

{% block title %}Realisation index{% endblock %}


{% block body %}
    <div>
    {{ include('menu/menu.html.twig', {lightMode: true}) }}
    </div>
    {% for realisation in realisations %}
    <div class="container-fluid">
        <div class="row" >
            <div class="col-md-12">
                <img class="d-block w-100" alt="" src="../uploads/images/realisation/{{ realisation.image }}" />
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8 text-center lead">
                        <h2>
                            {{ realisation.title }}
                        </h2>
                        <h3>Partager notre realisation :
                        {% set currentPath = path(app.request.attributes.get('_route'),
                            app.request.attributes.get('_route_params')) %}
                        {{ currentPath | share(realisation.title) }}</h3>
                        <p>
                            {% if realisation.description | split(' ')[5] is defined %}
                                {{ realisation.description | split(' ')[5] ~ '...' | raw }}
                            {% else %}
                                {{ realisation.description|raw }}
                            {% endif %}
                        </p>

                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}

{% endblock %}
