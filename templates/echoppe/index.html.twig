{% extends 'base.html.twig' %}

{% block title %}Échoppe - Legermain{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-3 mb-4">Legermain | Échoppe</h1>
        <a href="{{ path('cart') }}" class="btn btn-light">Cart</a>

        {{ form(form) }}
        <div class="row">
            {% for product in produits %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        {% if(product.file is not null) %}
                            <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}" class="card-img-top">
                        {% else %}
                            <img src="https://via.placeholder.com/200x150" alt="{{ product.name }}" class="card-img-top">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title">{{ product.name }}</h5>
                            <p class="card-text">{{ product.description }}</p>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="{{ path('product_detail', {id: product.id}) }}" class="btn btn-dark">View details</a>
                                <span class="h5 mt-auto">{{ product.price }} €</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}