{% extends 'base.html.twig' %}

{% block title %} Échoppe - Legermain {% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="align-content-center">Legermain | Échoppe</h1>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-2 border-right border-dark">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.filtre, 'Trier par :') }}
                    {{ form_widget(form.filtre) }}
                    {{ form_errors(form.filtre) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.categories, 'Catégories') }}
                    {{ form_widget(form.categories) }}
                    {{ form_errors(form.categories) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.submit) }}
                    {{ form_widget(form.submit) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-10">
                <div class="row">
                    <div class="col-10">
                        <p>Ceci est un fil d'ariane tout à fait fonctionnel</p>
                    </div>
                    <div class="col-2">
                        <a href="{{ path('cart') }}" class="btn btn-outline-danger text-right">Panier</a>
                    </div>
                </div>
                <div class="row">
                    {% for product in products %}
                        <div class="col-4">
                            <div class="card mb-4">
                                {% if(product.visualSrc is not null) %}
                                    <img src="/produits/{{ product.visualSrc }}" class="card-img-top" alt="{{ product.name }}">
                                {% else %}
                                    <img src="/produits/0.png" class="card-img-top" alt="Image non disponible">
                                {% endif %}
                                <div class="card-body">
                                    <h2 class="card-title">{{ product.name }}</h2>
<!--
                                    <p class="card-text">{{ product.description }}</p>
-->
                                    <div class="d-flex justify-content-between">
                                        <a href="{{ path('product_detail', {id: product.id}) }}" class="btn btn-dark">Voir plus</a>
                                        <span class="mt-auto">{{ product.price }} €</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}