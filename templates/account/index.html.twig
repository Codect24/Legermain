{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('styles/account') }}
{% endblock %}
{% block title %}Compte{% endblock %}

{% block body %}
    {{ include('menu/menu.html.twig', {lightMode: true}) }}
    <div class="main-content">


        <div class="lg-account-tabs">
            <div class="tab">
                <button class="tablinks" onclick="showSettings(event, 'Account')" id="defaultOpen">Compte</button>
                <button class="tablinks" onclick="showSettings(event, 'Orders')">Commandes</button>
                <button class="tablinks" onclick="showSettings(event, 'Notifications')">Notifications</button>
                <button class="tablinks" onclick="showSettings(event, 'Password')">Mot de Passe</button>
            </div>

            <div id="Account" class="tabcontent mt-3">
                <p class="lg-account-help">Vous trouverez ici vos informations personnelles</p>
                {{ form(form) }}
                <form class="lg-account-userDatas col">
                    <div class="d-flex flex-row">
                        <div class="d-flex flex-column lg-account-userDatas-name">
                            <label for="name">Nom</label>
                            <input class="lg-account-inputText" name="name" type="text">
                        </div>
                        <div class="d-flex flex-column lg-account-userDatas-firstName mx-3">
                            <label for="firstName">Prenom</label>
                            <input class="lg-account-inputText lg-account-userDatas-firstName" name="firstName"
                                   type="text">
                        </div>
                    </div>
                    <div class="d-flex flex-column mt-3">
                        <label for="email">Email</label>
                        <input class="lg-account-inputText" name="email" type="email">
                    </div>
                    <input class="lg-account-inputButton mt-5 float-end" type="submit" value="Sauvegarder">
                </form>
            </div>

            <div id="Orders" class="tabcontent">

            </div>

            <div id="Notifications" class="tabcontent">
                <p class="lg-account-help">Vous trouverez ici vos informations personnelles</p>
            </div>

            <div id="Password" class="tabcontent">
                <form class="lg-account-userDatas col">
                    <p class="lg-account-help">Vous trouverez ici la possibilit√©es de modifier votre mot de passe</p>
                    <div class="d-flex flex-column lg-account-userDatas-name">
                        <label class="mt-2" for="password">Ancien mot de passe</label>
                        <input class="lg-account-inputText" name="password" type="password">
                    </div>
                    <div class="d-flex flex-row mt-2">
                        <div class="d-flex flex-column lg-account-userDatas-name">
                            <label for="newPassword">Nouveau mot de passe</label>
                            <input class="lg-account-inputText" name="newPassword" type="password">
                        </div>
                        <div class="d-flex flex-column lg-account-userDatas-firstName mx-3">
                            <label for="confirmPassword">Confirmer le mot de passe</label>
                            <input class="lg-account-inputText" name="confirmPassword" type="password">
                        </div>
                    </div>
                    <input class="lg-account-inputButton mt-5 float-end" type="submit" value="Sauvegarder">
                </form>
            </div>
        </div>
    </div>
    {% block javascripts %}
        <script>
            function showSettings(evt, cityName) {
                var i, tabcontent, tablinks;
                tabcontent = document.getElementsByClassName("tabcontent");
                for (i = 0; i < tabcontent.length; i++) {
                    tabcontent[i].style.display = "none";
                }
                tablinks = document.getElementsByClassName("tablinks");
                for (i = 0; i < tablinks.length; i++) {
                    tablinks[i].className = tablinks[i].className.replace(" active", "");
                }
                document.getElementById(cityName).style.display = "block";
                evt.currentTarget.className += " active";
            }

            document.getElementById("defaultOpen").click();
        </script>
    {% endblock %}

{% endblock %}
